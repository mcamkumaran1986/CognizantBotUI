@model BotIntendMaster

<div class="modal fade" id="addcustomintend" tabindex="-1" role="dialog" aria-labelledby="addcustomintendlabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:70%">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addcustomintendlabel">Add Indends</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label asp-for="IntendName">Indend Name</label>
                        <input asp-for="IntendName" class="form-control" />
                        <span asp-validation-for="IntendName" class="text-danger"></span>
                    </div>
                </form>
                <button type="button" class="btn btn-success" id="btnAdd">Add</button>
            </div>
            <div id="divCustomIndent"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#divCustomIndent").load("/BotStore/getview",
            { attributeName: $("#IntendName").val(), viewName: "_DisplayCutomIntend" });

        $("#btnAdd").click(function () {
            $("#divCustomIndent").load("/BotStore/getview",
                { attributeName: $("#IntendName").val(), viewName: "_DisplayCutomIntend" });
        });
    });
</script>
