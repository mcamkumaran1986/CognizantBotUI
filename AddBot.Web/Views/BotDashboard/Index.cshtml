@model BotListing;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @{
        if (Model != null)
        {
            int Count = 0;
            foreach (var item in Model.BotMasters)
            {
                if (Count % 2 == 0)
                {
                    <div id="column" style="background-color: darkslateblue; padding:10px;" class="w-50">
                        <div class="row">
                            <div class="col-4">
                                <p class="text-left text-white" style="font-size:x-large">@item.BotName</p>
                                <ul>
                                    <li class="top-left text-white">@(item.Active ? "Available" : "Not Available")</li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <img class="rounded-circle align-content-lg-center imageThumbnail" src="~/images/Bot.png">
                            </div>
                            <div class="col-2 text-right">
                                @*<a href="#" class="text-white"><i class="fa fa-cog" aria-hidden="true"></i></a>*@
                                <a asp-controller="BotStore" asp-action="Edit" asp-route-id="@item.BotID" class="text-white"><i class="fa fa-cog" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div id="column" style="background-color: forestgreen; padding:10px;" class="w-50">
                        <div class="row">
                            <div class="col-4">
                                <p class="text-left text-white" style="font-size:x-large">@item.BotName</p>
                                <ul>
                                    <li class="top-left text-white">@(item.Active ? "Available" : "Not Available")</li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <img class="rounded-circle align-content-lg-center imageThumbnail" src="~/images/Bot.png">
                            </div>
                            <div class="col-2 text-right">
                                <a asp-controller="BotStore" asp-action="Edit" asp-route-id="@item.BotID" class="text-white"><i class="fa fa-cog" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                }
                if (Count % 2 == 1)
                {
                    <div class="col-12"><hr/></div>
                }
                Count = Count + 1;

            }
        }
    }
</div>

